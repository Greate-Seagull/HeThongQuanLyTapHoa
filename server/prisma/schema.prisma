generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                 Int                 @id @default(autoincrement())
  name               String?
  unit               ProductUnit         @default(UNKNOWN)
  price              Int
  barcode            Int                 @unique
  amount             Int                 @default(0)
  status             ProductStatus       @default(GOOD)
  promotionDetails   PromotionDetail[]
  invoiceDetails     InvoiceDetail[]
  goodReceiptDetails GoodReceiptDetail[]
  slotDetails        SlotDetail[]
  stocktakingDetails StocktakingDetail[]
}

model Promotion {
  id               Int               @id @default(autoincrement())
  name             String
  description      String?
  startedAt        DateTime
  endedAt          DateTime
  condition        String?
  value            Float
  promotionType    PromotionType
  promotionDetails PromotionDetail[]
  invoiceDetails   InvoiceDetail[]
}

model PromotionDetail {
  productId   Int
  promotionId Int
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  @@id([productId, promotionId])
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  point    Int       @default(0)
  invoices Invoice[]
}

model Employee {
  id           Int           @id @default(autoincrement())
  name         String
  invoices     Invoice[]
  goodReceipts GoodReceipt[]
  stocktakings Stocktaking[]
}

model Invoice {
  id         Int  @id @default(autoincrement())
  employeeId Int
  userId     Int?
  usedPoint  Int  @default(0)
  total      Int

  employee       Employee        @relation(fields: [employeeId], references: [id])
  user           User?           @relation(fields: [userId], references: [id])
  invoiceDetails InvoiceDetail[]
}

model InvoiceDetail {
  invoiceId   Int
  productId   Int
  quantity    Int
  promotionId Int?

  invoice   Invoice    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product   Product    @relation(fields: [productId], references: [id])
  promotion Promotion? @relation(fields: [promotionId], references: [id])

  @@id([invoiceId, productId])
}

model GoodReceipt {
  id         Int      @id @default(autoincrement())
  employeeId Int
  createdAt  DateTime

  employee           Employee            @relation(fields: [employeeId], references: [id])
  goodReceiptDetails GoodReceiptDetail[]
}

model GoodReceiptDetail {
  goodReceiptId Int
  productId     Int
  quantity      Int
  price         Int

  goodReceipt GoodReceipt @relation(fields: [goodReceiptId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id])

  @@id([goodReceiptId, productId])
}

model Shelf {
  id    Int    @id @default(autoincrement())
  name  String
  racks Rack[]
}

model Rack {
  id      Int    @id @default(autoincrement())
  name    String
  shelfId Int

  shelf Shelf  @relation(fields: [shelfId], references: [id], onDelete: Cascade)
  slots Slot[]
}

model Slot {
  id     Int    @id @default(autoincrement())
  name   String
  rackId Int

  rack               Rack                @relation(fields: [rackId], references: [id], onDelete: Cascade)
  slotDetails        SlotDetail[]
  stocktakingDetails StocktakingDetail[]
}

model SlotDetail {
  slotId    Int
  productId Int

  slot    Slot    @relation(fields: [slotId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([slotId, productId])
}

model Stocktaking {
  id         Int      @id @default(autoincrement())
  employeeId Int
  createdAt  DateTime @default(now())

  employee           Employee            @relation(fields: [employeeId], references: [id])
  stocktakingDetails StocktakingDetail[]
}

model StocktakingDetail {
  id            Int           @id @default(autoincrement())
  stocktakingId Int
  productId     Int
  slotId        Int
  status        ProductStatus
  quantity      Int

  stocktaking Stocktaking @relation(fields: [stocktakingId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id])
  slot        Slot        @relation(fields: [slotId], references: [id])
}

enum PromotionType {
  PERCENTAGE
  FIXED
}

enum ProductUnit {
  UNKNOWN
}

enum ProductStatus {
  GOOD
  EXPIRED
}
